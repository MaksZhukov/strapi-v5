{
  "kind": "collectionType",
  "collectionName": "screenshots",
  "info": {
    "singularName": "screenshot",
    "pluralName": "screenshots",
    "displayName": "Screenshot",
    "description": "Screenshot entity with tag tree"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "screenshots"
    }
  }
}

